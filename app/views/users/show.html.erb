<% provide :title, !@user.nil? ? @user.name : t(".not_exits") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user %>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= t(".microposts") %> (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      
      <%= paginate @microposts, theme: Settings.theme_config %>
    <% end %>
  </div>
</div>
